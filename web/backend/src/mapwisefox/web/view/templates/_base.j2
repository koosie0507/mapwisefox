<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <title>ERSA-SMS Survey - {% block page_title %}{% endblock %}</title>
        <link id="favicon" rel="icon" type="image/x-icon" href="{{ url_for('assets', path="favicon.ico") }}">
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ url_for('assets', path="style.css") }}"/>
    {% endblock %}
</head>
<body>
<div class="root-container">
    {% if not auth_enabled or user %}
        <header class="header-container">
            {% block page_header %}
                <form method="post">
                    <div class="toolbar">
                        <div class="left-toolbar">
                            {% if request.url != url_for('home') %}
                                <button type="submit" formaction="{{ url_for('home') }}" formmethod="get" title="Home">
                                    <span class="emoji">üè†</span>Survey List
                                </button>
                            {% endif %}
                        </div>
                        <div class="right-toolbar">
                            {% if auth_enabled %}
                            <button type="submit" formaction="{{ url_for('logout') }}">
                                <span class="emoji">‚èª</span>Log out
                            </button>
                            {% endif %}
                        </div>
                    </div>
                </form>
            {% endblock %}
        </header>

        {% block page_content %}
        <main class="main-container">
            <p>empty page...</p>
        </main>
        {% endblock %}
        {% block footer %}
            <footer class="footer-container">
                <small>Entity Resolution Software Architecture - A systematic mapping study</small>
            </footer>
        {% endblock %}
    {% else %}
        <div class="login-container">
            <p>You must log in to use this app.</p>
            <form action="{{ url_for('login') }}" method="post">
                <button type="submit" class="microsoft-btn">
                    <img
                            class="microsoft-logo"
                            src="https://upload.wikimedia.org/wikipedia/commons/4/44/Microsoft_logo.svg"
                            alt="Microsoft logo"
                    />
                    Log in with Microsoft
                </button>
            </form>
        </div>
    {% endif %}
</div>
{% block appscript %}
{% endblock %}
</body>
</html>